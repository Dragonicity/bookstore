<h2>Add New Book</h2>

<%= form_for @book do |f| %>
  <div class='form-group'>
    <%= f.label :title %><br/>
    <%= f.text_field :title, class: 'form-control' %><br/>
  </div>
  <div class='form-group'>
    <%= f.label :isbn %><br/>
    <%= f.text_field :isbn, class: 'form-control' %><br/>
  </div>
  <div class='form-group'>
    <%= f.label :categories %><br/>
    <%= f.select :category_id, Category.all.collect { |x| [x.name, x.id]}, {:include_blank => 'Select one'}, class: 'form-control' %><br/>
  </div>
  <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>