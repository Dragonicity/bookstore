<div id="books-index">
  <% @books.each_slice(4) do | book| %>
    <div class="row">
      <% book.each do |book| %>
        <div class="col-md-3 col-sm-3">
          <%= book.title%><br/>
          <%= book.isbn %><br/>
          <%= book.publisher_id %><br/>
          <%= link_to 'Read More', '', class: "btn btn-primary"%><br/>
        </div>
      <% end %>
    </div>
  <% end %> 
</div>