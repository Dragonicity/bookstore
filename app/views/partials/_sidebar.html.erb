<% if params[:controller] == 'about' %>
  <div class="well">
    <h3>Location Info</h3>
    <ul>
      <li>The Bookstore</li>
      <li>House 15, 26th Street</li>
      <li>Hong Lok Yuen</li>
      <li>New Territories</li>
      <li>Phone: (852) 5555 5555</li>
      <li>Email: contact@thebookstore.com</li>
    </ul>
  </div>
<% end %>

<% if params[:controller] == 'books' && params[:action] == 'index' || params[:action] == 'show' %>
<div class="list-group">
  <% @categories.order('name').each do |category| %>
    <%= link_to category.name, category_path(category.id), class: 'list-group-item' %>
  <% end %>
</div>
<% end %>